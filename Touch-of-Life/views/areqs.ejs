<!DOCTYPE html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Requests</title>

    <link rel="stylesheet" type="text/css" href="../css/adopt.css">
    <link rel="stylesheet" type="text/css" href="../css/general.css">
    <script type="text/javascript" src="../js/adopt.js"></script>
</head>

<body>
    <div class="topnav">
        <div class="text_logo">
            <h2>Touch of Life Organization</h2>
        </div>

        <nav class="links" style="--items: 2;">
            <a onclick="location.href='/'" type="button">Home</a>
            <a onclick="location.href='/admin'" type="button">Admin page</a>
            <span class="line"></span>
        </nav>
    </div>

    <% for (var r of rqs) { %>
        <div class="card">
            <div class="form">
                <form>

                    <h3>Name:
                        <p id="id">
                            <%=r.name %>
                        </p>
                    </h3>
                    <h3>phone number:
                        <p id="name">
                            <%=r.phone %>
                        </p>
                    </h3>
                    <h3>animal ID:
                        <p id="name">
                            <%=r.animal %>
                        </p>
                    </h3>
                </form>

            </div>
            <form action="/delete" method="post">
                <button type="submit" value="delete">DELETE</button>
                <input type="hidden" name="reqid" value=<%=r._id %>>
            </form>

        </div>
        <% } %>


            <footer>
                <p id="contact">Contact us here!</p>
                <div class="contacts_bar">
                    <a href="https://web.facebook.com/TOLAnimalSanctuary/about"> <img class="clogo" src="../imgs/icons/fb.png" alt="Facebook"> </a>
                    <a href=""> <img class="clogo" src="../imgs/icons/email.png" alt="Email"> </a>
                    <a href=""> <img class="clogo" src="../imgs/icons/phone.png" alt="Telephone"> </a>
                </div>
                <p>TOUCH OF LIFE Organization Reg.nr 2897 - 03/5/07 Ministry of Social Affairs Giza- EGYPT
                </p>
            </footer>

</body>

</html>